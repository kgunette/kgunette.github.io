    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // CSV URLs from Google Sheets
        const SHEETS = {
            2026: 'https://docs.google.com/spreadsheets/d/e/2PACX-1vQuOieHRZ_cDgvoN7TDeujJWV5Akg1ITU8WWEwrDnHjEkyzGEEvoDh4uaGJvZuNYl0WQL6_jTultDNW/pub?gid=1004744420&single=true&output=csv',
            2025: 'https://docs.google.com/spreadsheets/d/e/2PACX-1vQuOieHRZ_cDgvoN7TDeujJWV5Akg1ITU8WWEwrDnHjEkyzGEEvoDh4uaGJvZuNYl0WQL6_jTultDNW/pub?gid=1785861805&single=true&output=csv'
        };

        // Parse CSV text into array of objects
        function parseCSV(text) {
            const lines = text.trim().split('\n');
            const headers = parseCSVLine(lines[0]);
            const books = [];
            
            for (let i = 1; i < lines.length; i++) {
                const values = parseCSVLine(lines[i]);
                if (values.length >= 3) {
                    books.push({
                        title: values[0] || '',
                        author: values[1] || '',
                        status: values[2] || ''
                    });
                }
            }
            return books;
        }

        // Parse a single CSV line, handling quoted fields
        function parseCSVLine(line) {
            const result = [];
            let current = '';
            let inQuotes = false;
            
            for (let i = 0; i < line.length; i++) {
                const char = line[i];
                if (char === '"') {
                    inQuotes = !inQuotes;
                } else if (char === ',' && !inQuotes) {
                    result.push(current.trim());
                    current = '';
                } else {
                    current += char;
                }
            }
            result.push(current.trim());
            return result;
        }

        // Get status class for styling
        function getStatusClass(status) {
            const s = status.toLowerCase().trim();
            if (s === 'done') return 'status-done';
            if (s === 'dnf') return 'status-dnf';
            if (s === 'in progress') return 'status-in-progress';
            return '';
        }

        // Render books to the page
        function renderBooks(books, containerId, countId) {
            const container = document.getElementById(containerId);
            const countEl = document.getElementById(countId);
            
            if (books.length === 0) {
                container.innerHTML = '<li class="book-item">No books yet!</li>';
                countEl.textContent = '';
                return;
            }

            // Sort: In Progress first, then Done, then DNF
            const statusOrder = { 'in progress': 0, 'done': 1, 'dnf': 2 };
            books.sort((a, b) => {
                const orderA = statusOrder[a.status.toLowerCase().trim()] ?? 3;
                const orderB = statusOrder[b.status.toLowerCase().trim()] ?? 3;
                return orderA - orderB;
            });

            const html = books.map(book => {
                const statusClass = getStatusClass(book.status);
                const statusBadge = book.status ? 
                    `<span class="book-status ${statusClass}">${book.status}</span>` : '';
                
                return `
                    <li class="book-item">
                        <span class="book-title">${book.title}</span>${statusBadge}<br>
                        <span class="book-author">${book.author}</span>
                    </li>
                `;
            }).join('');

            container.innerHTML = html;
            countEl.textContent = `(${books.length} book${books.length !== 1 ? 's' : ''})`;
        }

        // Fetch and display books for a year
        async function loadBooks(year) {
            const url = SHEETS[year];
            const containerId = `books-${year}`;
            const countId = `count-${year}`;
            
            try {
                const response = await fetch(url);
                const text = await response.text();
                const books = parseCSV(text);
                renderBooks(books, containerId, countId);
            } catch (error) {
                console.error(`Error loading ${year} books:`, error);
                document.getElementById(containerId).innerHTML = 
                    '<li class="book-item">Unable to load books. Please try again later.</li>';
            }
        }

        // Load all years on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadBooks(2026);
            loadBooks(2025);
        });
    </script>
</body>
